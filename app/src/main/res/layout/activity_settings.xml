<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.senturk.fatih.chat03.Settings"
    android:weightSum="1"
    android:background="#123456">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Ne söylemek istersin ?"
        android:gravity="top"
        android:id="@+id/updateStatusText"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateStatusButton"
        android:text="Güncelle"
        tools:ignore="RtlCompat"
        android:layout_below="@+id/updateStatusText"
        android:layout_alignLeft="@+id/uygulamdanCik"
        android:layout_alignStart="@+id/uygulamdanCik"
        android:layout_alignRight="@+id/uygulamdanCik"
        android:layout_alignEnd="@+id/uygulamdanCik" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0.66"
        android:gravity="center_vertical"
        android:text="*Yeni durumlari gorebimek icin durumunzu guncellemeniz gereklidir."
        android:textColor="@color/switch_thumb_disabled_material_dark"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/updateStatusButton"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/uygulamdanCik" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/uygulamdanCik"
        android:background="@drawable/logout_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
